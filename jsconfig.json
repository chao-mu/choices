{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "baseUrl": "./",
    "checkJs": true,
    "resolveJsonModule": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules", "dist", "vite.config.js"]
}
